.list {
  padding: 0 20rpx 20rpx;
}

.item {
  position: relative;
  margin-top: 20rpx;
  padding: 20rpx;
  box-shadow: 0 14rpx 56rpxrgba(0, 0, 0, 0.07);
  position: relative;
  border-radius: 10rpx;
}

.item__poster {
  display: block;
  width: 670rpx;
  height: 380rpx;
  border-radius: 12rpx;
}

.item__tag {
  padding: 0 15rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(165deg, #ffac2f 0%, #fb5587 100%);
  border-radius: 16rpx;
  position: absolute;
  left: 40rpx;
  top: 350rpx;
  display: flex;
  align-items: center;
}

.item__tag image {
  margin-right: 5rpx;
  width: 20rpx;
  height: 20rpx
}

.item__content {
  margin-top: 20rpx;
  font-size: 24rpx;
  display: flex
}

.item__title {
  margin-left: 10rpx;
  flex: 1;
}

.item__button {
  padding: 15rpx 30rpx;
  font-size: 30rpx;
  color: #fc6776;
  border: 1rpx solid #fc6776;
  border-radius: 60rpx;
}

.item__button--disabled {
  color: #9e9e9e;
  border-color: #9e9e9e;
}

.replay_tag {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  z-index: 10;
  background: rgba(0, 0, 0, .6);
  color: #fff;
  border-radius: 6rpx;
  font-size: 22rpx;
  padding: 2rpx 8rpx;
}

.replayBtn {
  width: 120px;
  height: 41px;
  line-height: 41px;
  font-weight: 450;
  text-align: center;
  font-size: 17px;
  color: #FFFFFF;
  background: #ff5344;
  border-radius: 4px;
  pointer-events: auto;
  margin: 0 auto;
}