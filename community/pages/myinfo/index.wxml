<view class="container">
	<view class="avatar">
		<text>头像</text>
		<view class="real">

			<image class="a" src="{{userInfoAvatar}}" />

		</view>
	</view>
	<view class="nickName">
		<text>名字</text>
		<view class="real">{{nickName}}</view>
	</view>

	<view class="area">
		<text>真实姓名</text>
		<view class="real" style="height:100rpx;margin:25rpx 0">
			<input bindinput="bindrealname" style="height:100rpx;line-height: 100rpx;" placeholder="请输入真实姓名" type="text" name="realname" value="{{member_info.realname}}" />
		</view>
	</view>
	<view class="signature">
		<text>手机号</text>
		<view class="real" style="height:100rpx;margin:25rpx 0">
			<input bindinput="bindmobile" style="height:100rpx;line-height: 100rpx;" placeholder="请输入手机号" type="number" name="mobile" value="{{member_info.telephone}}" />
		</view>
	</view>
	<view class="signature">
		<text>生日</text>
		<view class="real" style="height:100rpx;margin:25rpx 0">
			<input bindinput="bindbirth" style="height:100rpx;line-height: 100rpx;" placeholder="请输入生日年月日" type="number" name="birth" value="{{member_info.birth}}" />
		</view>
	</view>
  <button bindtap="saveinfo" style="margin-top: 50rpx;background: #13bb4e;color: white;">保存信息</button>
</view>